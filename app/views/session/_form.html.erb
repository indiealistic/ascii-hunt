<% if flash[:error].present? %>
  <p class="error">
    <%= flash[:error] %>
  </p>
<% end %>

<%= form_tag login_path do %>
  <%= label_tag :username %>
  <%= username_field_tag :username  %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "sign in" %>
<% end %>
